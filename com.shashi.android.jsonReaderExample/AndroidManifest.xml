<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.com.shashi.android.jsonreaderexample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    
    <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:allowBackup="true">       
         <activity
            android:label="@string/app_name"
            android:name="com.example.com.shashi.android.jsonreaderexample.MainActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Single List Item Activity -->
        <activity
            android:label="Contact"
            android:name="com.example.com.shashi.android.jsonreaderexample.SingleContactActivity" >
        </activity>
    </application>

</manifest>
